extends ../layouts/default

block menu
  - var page = 'Dashboard'

block breadcumb
  li.breadcrumb-item
    a(href='/admin') Home
  li.breadcrumb-item.active(aria-current='page')
    a(href='/admin/dashboard') Dashboard

block main
  .row
    .col-12
      h2 Dashboard
      .project
        .tab.mt-0
          ul.nav-tabs.nav
            li.nav-item
              a.nav-link.active.js-nav-link(data-toggle='tab', href='#ongoing')
                span.ongoing-text Ongoing
                span.ongoing-count (3)
            li.nav-item
              a.nav-link.js-nav-link(data-toggle='tab', href='#completed')
                span.completed-text Completed
                span.completed-count (10)
          .tab-content
            #ongoing.tab-pane.fade.in.show.active
              .todo-ongoing
                .todo-ongoing__list-item
                  .row.row--custom
                    .col-6.todo-ongoing__row
                      .todo-ongoing__item
                        .d-flex.justify-content-between.align-items-center
                          a.todo-ongoing__sub-title(href='#!') Upload movie
                          span.todo-ongoing__day  6/31（task)
                        .d-flex.justify-content-between.align-items-center.mt-1
                          span.todo-ongoing__sum 5/7
                          span.todo-ongoing__time 19:00
                        .progress
                          .progress-bar(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:80%')
                          .progress-bar.progress-bar--remain(role='progressbar', style='width:20%')
                            span.sr-only 20%
                        .todo-ongoing__next-task
                          | Next task：
                          a.sending(href='#!') Upload Joker

                    .col-6.todo-ongoing__row
                      .todo-ongoing__item
                        .d-flex.justify-content-between.align-items-center
                          a.todo-ongoing__sub-title(href='#!') Upload movie
                          span.todo-ongoing__day  6/31（task)
                        .d-flex.justify-content-between.align-items-center.mt-1
                          span.todo-ongoing__sum 5/7
                          span.todo-ongoing__time 19:00
                        .progress
                          .progress-bar(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:80%')
                          .progress-bar.progress-bar--remain(role='progressbar', style='width:20%')
                            span.sr-only 20%
                        .todo-ongoing__next-task
                          | Next task：
                          a.sending(href='#!') Upload Joker
                  
                    .col-6.todo-ongoing__row
                      .todo-ongoing__item
                        .d-flex.justify-content-between.align-items-center
                          a.todo-ongoing__sub-title(href='#!') Completed
                          span.todo-ongoing__day 6/31（task)
                        .d-flex.justify-content-between.align-items-center.mt-1
                          span.todo-ongoing__sum 7/7
                          span.todo-ongoing__time 19:00
                        .progress
                          .progress-bar.progress-bar--complete(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width:100%')
                            span.progress-bar__complete
                        .todo-ongoing__noti
                          span.noti-status 100％!
                          span.noti-message Done.
                        .todo-ongoing__check
                          a.todo-ongoing__check-link(href='#!') Check
                    .col-6.todo-ongoing__row
                      .todo-ongoing__more
                        a(href='#!')
                          i.icon-fonts.icon-fonts--add-30
            #completed.tab-pane.fade.in
              .row.row--custom
                .col-6
                  .todo-completed
                    .todo-completed__item
                      a.todo-completed__sub-title(href='#!') Split movie
                      span.todo-completed__day 6/31（part)
                    .todo-completed__time 19:00
