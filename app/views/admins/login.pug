extends ../layouts/admin

block main
  .row.no-gutter
    .d-none.d-md-flex.col-md-4.col-lg-6.bg-image
    .col-md-8.col-lg-6
      .login.d-flex.align-items-center.py-5
        .row.w-100
          .col-md-9.col-lg-8.mx-auto
            h3.login-heading.mb-4 Welcome back!
            form(method='POST' action='/admin/login')
              .form-label-group.mb-2
                label(for='inputEmail') Email address
                input#inputEmail.form-control(type='text' placeholder='Email address' autofocus='' name='email')
              .form-label-group
                label(for='inputPassword') Password
                input#inputPassword.form-control(type='password' placeholder='Password' name='password')
              .custom-control.custom-checkbox.mb-3
                input#customCheck1.custom-control-input(type='checkbox')
                label.custom-control-label(for='customCheck1') Remember password
              
              p.mb-2.text-danger Email or password is incorrect
              button.btn.btn-lg.btn-primary.btn-block.btn-login.text-uppercase.font-weight-bold.mb-2(type='submit') Sign in
              .text-center
                a.small(href='#') Forgot password?
